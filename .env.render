# Configuration des variables d'environnement pour Render
# À configurer dans le dashboard Render

# CORS - Mode permissif temporaire pour déboguer
CORS_ALLOW_ALL_ORIGINS=True

# Origines spécifiques autorisées
CORS_ALLOWED_ORIGINS=https://detectioncancerfront.onrender.com,http://localhost:3000

# Hosts autorisés
ALLOWED_HOSTS=detectioncancer-backend.onrender.com,.onrender.com,localhost,127.0.0.1

# Configuration Django
DEBUG=False
SECRET_KEY=your-super-secret-key-here

# Base de données (si PostgreSQL)
# DATABASE_URL=postgres://user:password@host:port/database

# Configuration de production
USE_TLS=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
